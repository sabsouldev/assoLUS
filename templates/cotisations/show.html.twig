{% extends 'base.html.twig' %}

{% block title %}Cotisations{% endblock %}

{% block body %}
    <h1>Cotisations</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cotisation.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ cotisation.nom }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ cotisation.montant }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ cotisation.date ? cotisation.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ cotisation.statut ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cotisations_index') }}">back to list</a>

    <a href="{{ path('app_cotisations_edit', {'id': cotisation.id}) }}">edit</a>

    {{ include('cotisations/_delete_form.html.twig') }}
{% endblock %}
